{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules", "tsconfig", "dist", "src/**/*.test.ts"]
}
